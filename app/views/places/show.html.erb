<h1><%= @place.name %></h1>
<br>
<ul>
    <% for post in @posts %>
    <h2><%= post.title %></h2>
    <i><p><%= post.posted_on %></p></i>
    <strong><p><%= post.description %></p></strong>
    <br>
    <% end %>
</ul>
<br>
<br>
 
 

<p>
    <a href="/posts/new?place_id=<%= @place.id %>">New Post</a>
</p>
